{
  "version": 2,
  "name": "job-portal-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://job-portal-backend-fwdx.onrender.com/api",
    "REACT_APP_SERVER_URL": "https://job-portal-backend-fwdx.onrender.com"
  }
}